<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="mainFxmlClass"
            stylesheets="@registro_producto.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="presentation.registro_producto.Registro_productoController">

    <children>
        <!-- Contenedor general centrado con mÃ¡rgenes -->
        <VBox alignment="TOP_CENTER"
              spacing="15"
              AnchorPane.topAnchor="40.0"
              AnchorPane.bottomAnchor="40.0"
              AnchorPane.leftAnchor="40.0"
              AnchorPane.rightAnchor="40.0">

            <!-- Tarjeta del formulario -->
            <VBox alignment="TOP_CENTER"
                  spacing="15"
                  styleClass="form-panel"
                  maxWidth="600" maxHeight="800">

                <Label styleClass="titulo-formulario" text="REGISTRO DE PRODUCTO" />

                <Label styleClass="label-formulario" text="Nombre:" />
                <TextField fx:id="txtNombre" styleClass="textfield-formulario" />

                <Label styleClass="label-formulario" text="Cantidad:" />
                <TextField fx:id="txtCantidad" styleClass="textfield-formulario" />

                <Label styleClass="label-formulario" text="Precio:" />
                <TextField fx:id="txtPrecio" styleClass="textfield-formulario" />

                <Label styleClass="label-formulario" text="ID:" />
                <TextField fx:id="txtId" styleClass="textfield-formulario" />

                <Label styleClass="label-formulario" text="En Stock:" />
                <CheckBox fx:id="chkStock" />

                <Label styleClass="label-formulario" text="Imagen:" />
                <HBox spacing="10">
                    <TextField fx:id="txtRutaImagen" editable="false" styleClass="textfield-formulario" />
                    <Button onAction="#seleccionarImagen" styleClass="boton-principal" text="Seleccionar" />
                </HBox>

                <Button onAction="#registrarProducto"
                        styleClass="boton-principal"
                        text="Registrar" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>
