<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="920.0" prefWidth="912.0"
            styleClass="mainFxmlClass"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="presentation.login.LoginController">

   <stylesheets>
      <URL value="@login.css" />
   </stylesheets>

   <children>
      <!-- Fondo -->
      <ImageView fitHeight="933.0" fitWidth="922.0" opacity="0.89"
                 pickOnBounds="true" preserveRatio="true"
                 style="-fx-fit-width: 920; -fx-fit-height: 920;">
         <image>
            <Image url="@../../resources/images/Panadería las raices918px.jpg" />
         </image>
      </ImageView>

      <!-- Panel del login -->
      <Pane layoutX="254.0" layoutY="322.0" prefHeight="278.0" prefWidth="456.0"
            style="-fx-background-color: transparent;">
         <children>
            <Label layoutX="148.0" layoutY="14.0"
                   styleClass="label-formulario"
                   text="USUARIO"
                   textFill="WHITE">
               <font>
                  <Font name="Cambria" size="24.0" />
               </font>
            </Label>

            <!-- TextField de usuario con fx:id -->
            <TextField fx:id="txtNombreUsuario"
                       alignment="CENTER"
                       layoutX="100.0" layoutY="49.0"
                       promptText="Ingresar usuario"
                       style="-fx-background-color: #fff8dc; -fx-border-color: #d6a85a;
                                  -fx-border-radius: 5; -fx-background-radius: 5;
                                  -fx-padding: 6; -fx-font-size: 14;">
               <font>
                  <Font name="Cambria" size="24.0" />
               </font>
            </TextField>

            <Label layoutX="129.0" layoutY="92.0"
                   styleClass="label-formulario"
                   text="CONTRASEÑA"
                   textFill="WHITE">
               <font>
                  <Font name="Cambria" size="24.0" />
               </font>
            </Label>

            <!-- PasswordField en lugar de TextField -->
            <PasswordField fx:id="txtPassword"
                           alignment="CENTER"
                           layoutX="100.0" layoutY="122.0"
                           promptText="Ingresar Contraseña"
                           style="-fx-background-color: #fff8dc; -fx-border-color: #d6a85a;
                                      -fx-border-radius: 5; -fx-background-radius: 5;
                                      -fx-padding: 6; -fx-font-size: 14;">
               <font>
                  <Font name="Cambria" size="24.0" />
               </font>
            </PasswordField>

            <!-- Botón con fx:id y onAction -->
            <Button fx:id="btnIniciar"
                    layoutX="135.0" layoutY="169.0"
                    mnemonicParsing="false"
                    prefHeight="25.0" prefWidth="102.0"
                    styleClass="boton-principal"
                    text="INICIAR"
                    onAction="#iniciarSesion"/>
         </children>
      </Pane>
   </children>
</AnchorPane>
